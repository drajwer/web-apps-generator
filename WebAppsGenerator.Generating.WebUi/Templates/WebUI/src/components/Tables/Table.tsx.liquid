}

const mapStateToProps = (state: IRootState, ownProps: I{{ Params.Entity.Name }}TableProps) => ({
    {{ Params.Entity.CamelCasePluralName }}: state.{{ Params.Entity.CamelCaseName }}.{{ Params.Entity.CamelCasePluralName }},
