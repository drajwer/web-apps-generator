import { Api } from '../config';
import { jsonAjax, jsonPayloadAjax } from '../vendors/http';

const controllerName = '/{{Params.Entity.PluralName | DeCapitalize}}';

type IdType = number | string;

export const Get = (id: IdType) =>
    jsonAjax({
        type: 'GET',
        url: Api + `${controllerName}/${id}`,
    });

export const GetAll = () =>
    jsonAjax({
        type: 'GET',
        url: Api + controllerName
    });

export const Post = (data: any) => 
    jsonPayloadAjax({
        data,
        type: 'POST',
        url: Api + controllerName
    });

export const Put = (id: IdType, data: any) =>
    jsonPayloadAjax({
        data,
        type: 'PUT',
        url: Api + `${controllerName}/${id}`
    });

export const Delete = (id: IdType) =>
    jsonPayloadAjax({
        type: 'DELETE',
        url: Api + `${controllerName}/${id}`,
    });